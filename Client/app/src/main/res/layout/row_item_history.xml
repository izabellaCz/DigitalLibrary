<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/book_image"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/default_book_image" />
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:src="@drawable/default_book_image"/>

    <TextView
        android:id="@+id/book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:text="Luceafarul"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_below="@+id/book_image"
        android:layout_centerHorizontal="true"
        android:paddingStart="80dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_toEndOf="@+id/book_image"
        android:layout_below="@+id/book_title"
        android:padding="5sp"
        >

        <TextView
            android:id="@+id/book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autor: Mihai Eminescu"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/darker_gray"
            android:padding="2sp"
            android:textAlignment="textStart"
            />

        <TextView
            android:id="@+id/book_rented_on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/book_author"
            android:text="Rented on: 01.01.1970"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black"
            android:padding="2sp"
            android:textAlignment="textEnd"
            />
        <TextView
            android:id="@+id/book_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/book_rented_on"
            android:text="Return before: 30.01.1970"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black"
            android:padding="2sp"
            android:textAlignment="textEnd"
            />

    </RelativeLayout>

</RelativeLayout>